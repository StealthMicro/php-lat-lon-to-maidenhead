{
    "name": "stealthmicro/php-lat-lon-to-maidenhead",
    "description": "Convert Latitude/Longitude to Maidenhead / GridSquare",
    "keywords": [
        "stealthmicro",
        "maidenhead",
        "gridsquare",
        "latitude",
        "longitude"
    ],
    "homepage": "https://github.com/stealthmicro/php-lat-lon-to-maidenhead",
    "license": "MIT",
    "authors": [
        {
            "name": "Robert Mann",
            "email": "robert@stealthmicro.com",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^8.4"
    },
    "require-dev": {
        "pestphp/pest": "^3.0",
        "laravel/pint": "^1.0",
        "spatie/ray": "^1.28"
    },
    "autoload": {
        "psr-4": {
            "Stealthmicro\\LatLonToMaidenhead\\": "src"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Stealthmicro\\LatLonToMaidenhead\\Tests\\": "tests"
        }
    },
    "scripts": {
        "test": "vendor/bin/pest",
            "test-coverage": "vendor/bin/pest --coverage",
        "format": "vendor/bin/pint"
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true,
            "phpstan/extension-installer": true
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
